<?xml version="1.0" encoding="utf-8"?>
<com.ace.easyteacher.View.XLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <com.ace.easyteacher.View.XLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/add_student"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:background="#83AF9B"
            android:gravity="center"
            android:text="添加学生"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/add_teacher"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="#C8C8A9"
            android:gravity="center"
            android:text="添加老师信息"
            android:textColor="#ffffff"
            android:visibility="invisible" />

        <Button
            android:id="@+id/add_grade"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="#F9CDAD"
            android:gravity="center"
            android:text="添加成绩"
            android:textColor="#ffffff"
            android:visibility="invisible" />

        <Button
            android:id="@+id/add_class"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="#FC9D9A"
            android:gravity="center"
            android:text="添加班级"
            android:textColor="#ffffff"
            android:visibility="invisible" />

        <Button
            android:id="@+id/add_schedule"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="#FE4365"
            android:gravity="center"
            android:text="添加课表"
            android:textColor="#ffffff"
            android:visibility="invisible" />

        <Button
            android:id="@+id/add_exam"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="#00B2EE"
            android:gravity="center"
            android:text="添加考试"
            android:textColor="#ffffff"
            android:visibility="invisible" />
    </com.ace.easyteacher.View.XLinearLayout>
</com.ace.easyteacher.View.XLinearLayout>