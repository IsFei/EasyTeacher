<?xml version="1.0" encoding="utf-8"?>
<com.ace.easyteacher.View.XLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <com.ace.easyteacher.View.XLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/delete_teacher"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:background="#83AF9B"
            android:gravity="center"
            android:text="删除老师"
            android:textColor="#ffffff"
            android:visibility="invisible" />

        <Button
            android:id="@+id/delete_student"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="#FE4365"
            android:gravity="center"
            android:text="删除学生"
            android:textColor="#ffffff"
            android:visibility="invisible" />

        <Button
            android:id="@+id/delete_schedule"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="#00B2EE"
            android:gravity="center"
            android:text="删除班级课程表"
            android:textColor="#ffffff" />
    </com.ace.easyteacher.View.XLinearLayout>
</com.ace.easyteacher.View.XLinearLayout>
