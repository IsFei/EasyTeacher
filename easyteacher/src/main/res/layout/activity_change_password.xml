<?xml version="1.0" encoding="utf-8"?>
<com.ace.easyteacher.View.XLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ace.easyteacher.Activity.ChangePasswordActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:titleTextColor="@color/white"
        app:title="修改密码"
        app:titleTextColor="@color/white" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/job_number"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:hint="请输入工号"
        android:inputType="number"
        app:met_floatingLabel="highlight" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/new_pwd"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:hint="请输入新密码"
        android:inputType="numberPassword"
        app:met_floatingLabel="highlight" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/new_pwd_2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:hint="请输入新密码"
        android:inputType="numberPassword"
        app:met_floatingLabel="highlight" />

    <Button
        android:id="@+id/change_pwd"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="#1db65e"
        android:gravity="center"
        android:text="修改密码"
        android:textColor="#ffffff" />

</com.ace.easyteacher.View.XLinearLayout>
