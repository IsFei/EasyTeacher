<?xml version="1.0" encoding="utf-8"?>
<com.ace.easyteacher.View.XLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <Button
        android:id="@+id/dt_by_job_number"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:background="#1db65e"
        android:gravity="center"
        android:text="根据工号删除老师"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/dt_by_list"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:background="#1db65e"
        android:gravity="center"
        android:text="视图列表删除"
        android:textColor="#ffffff" />


    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/dt_tv_job_number"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:hint="请输入要删除教师的工号"
        android:visibility="gone"
        app:met_floatingLabel="highlight" />

    <Button
        android:id="@+id/dt_confirm"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:background="#1db65e"
        android:gravity="center"
        android:text="确认"
        android:textColor="#ffffff"
        android:visibility="gone" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/dt_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:visibility="gone" />
</com.ace.easyteacher.View.XLinearLayout>
