<?xml version="1.0" encoding="utf-8"?>
<com.ace.easyteacher.View.XLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.ace.easyteacher.Activity.LoginActivity"
    android:orientation="vertical">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="30sp"
    android:layout_marginTop="50dp"
    android:text="班主任管理系统"
    android:gravity="center"/>
    <com.rengwuxian.materialedittext.MaterialEditText
        app:met_floatingLabel="highlight"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_marginTop="50dp"
        android:id="@+id/user"
        android:hint="请输入工号"
        android:inputType="number"
        android:background="@color/bg_green"
        android:layout_gravity="center_horizontal"
        />
    <com.rengwuxian.materialedittext.MaterialEditText
        app:met_floatingLabel="highlight"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_marginTop="10dp"
        android:background="@color/bg_gray"
        android:id="@+id/pwd"
        android:hint="请输入密码"
        android:inputType="numberPassword"
        android:layout_gravity="center_horizontal"
        />
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/login"
        android:background="#1db65e"
        android:text="登陆"
        android:gravity="center"
        android:textColor="#ffffff"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"/>

</com.ace.easyteacher.View.XLinearLayout>
